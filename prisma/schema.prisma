generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

enum CadenceType {
  DAILY
  WEEKLY
}

enum PointReason {
  CHECKIN_POINTS
  ADJUSTMENT       // For manual corrections if ever needed
}

enum ChallengeStatus {
  PENDING     // Waiting for all members to approve
  SCHEDULED   // All approved, waiting for challenge week to start
  ACTIVE      // Challenge week is in progress
  SUCCEEDED   // All members hit threshold, rank increased
  FAILED      // At least one member missed threshold
}

enum ChallengeMode {
  STANDARD         // Regular group challenge - everyone competes individually
  TEAM_VS_TEAM     // Group split into two teams
  DUO_COMPETITION  // Members compete as pairs/duos
}

model User {
  id           String        @id @default(cuid())
  name         String
  nickname     String?                              // Display name for group members
  email        String        @unique
  passwordHash String
  timezone     String        @default("America/Chicago")
  reminderTime String        @default("09:00")
  reminderFrequency String   @default("DAILY")
  image        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Points system
  pointsLifetimeMilli Int     @default(0)  // Total points earned (milli-points for precision)
  pointsWeekMilli     Int     @default(0)  // Points earned this week
  pointsWeekKey       String?              // Which week the weekly points are for

  members  GroupMember[]
  goals    Goal[]
  checkIns CheckIn[]
  sentReminders     Reminder[] @relation("SentReminders")
  receivedReminders Reminder[] @relation("ReceivedReminders")
  cheers   Cheer[]
  ledgerEntries PointLedger[]

  accounts Account[]
  sessions Session[]
}

model Group {
  id         String        @id @default(cuid())
  name       String
  inviteCode String        @unique
  rank       Int           @default(1)  // Group rank: 1=Bronze, 2=Silver, 3=Gold, 4=Platinum, 5+=Diamond
  createdAt  DateTime      @default(now())

  // Persistent tier system (always active, independent of challenges)
  currentTier          String   @default("BRONZE")  // BRONZE, SILVER, GOLD, PLATINUM, DIAMOND_I, DIAMOND_II, etc.
  weeklyCompletionRate Float    @default(0)         // 0-100, calculated weekly
  lastTierUpdate       DateTime?                    // When tier was last recalculated

  members    GroupMember[]
  goals      Goal[]
  reminders  Reminder[]
  challenges GroupChallenge[]
}

model GroupMember {
  id       String   @id @default(cuid())
  userId   String
  groupId  String
  role     Role     @default(MEMBER)
  joinedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

model Goal {
  id               String       @id @default(cuid())
  name             String
  notes            String?
  cadenceType      CadenceType
  weeklyTarget     Int?
  dailyTarget      Int          @default(1)  // How many times per day (for multi-completion goals)
  pointsPerCheckIn Int          @default(10)
  weeklyTargetBonus Int         @default(20)
  streakBonus      Int          @default(5)
  sortOrder        Int          @default(0)  // For drag-and-drop ordering
  active           Boolean      @default(true)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  ownerId String
  groupId String?

  owner    User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  group    Group?   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  checkIns CheckIn[]
  ledgerEntries PointLedger[]

  @@index([groupId])
  @@index([ownerId])
  @@index([ownerId, sortOrder])
}

model CheckIn {
  id           String   @id @default(cuid())
  goalId       String
  userId       String
  timestamp    DateTime @default(now())
  localDateKey String
  weekKey      String
  isPartial    Boolean  @default(false)  // Partial/mini completion

  goal   Goal    @relation(fields: [goalId], references: [id], onDelete: Cascade)
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  cheers Cheer[]

  // Note: No unique constraint on (goalId, userId, localDateKey) to allow 
  // multiple check-ins per day for multi-target goals (e.g., "drink water 8x/day")
  @@index([goalId, userId, localDateKey])
  @@index([goalId, userId, weekKey])
  @@index([userId, weekKey])
}

model Reminder {
  id          String   @id @default(cuid())
  groupId     String
  senderId    String
  recipientId String
  message     String
  createdAt   DateTime @default(now())
  readAt      DateTime?

  group     Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  sender    User  @relation("SentReminders", fields: [senderId], references: [id], onDelete: Cascade)
  recipient User  @relation("ReceivedReminders", fields: [recipientId], references: [id], onDelete: Cascade)

  @@index([recipientId, readAt])
  @@index([groupId, createdAt])
}

model Cheer {
  id          String   @id @default(cuid())
  checkInId   String
  senderId    String
  createdAt   DateTime @default(now())
  readAt      DateTime?  // When the recipient dismissed/read this cheer

  checkIn   CheckIn @relation(fields: [checkInId], references: [id], onDelete: Cascade)
  sender    User    @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@unique([checkInId, senderId])  // One cheer per person per check-in
  @@index([checkInId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Points system ledger for idempotent, auditable points awards
model PointLedger {
  id          String      @id @default(cuid())
  userId      String
  goalId      String?
  weekKey     String
  localDate   String?     // For daily goals, the specific date
  pointsMilli Int         // Points * 1000 for precision (avoids "+0" on small increments)
  reason      PointReason
  sourceId    String      // checkInId for CHECKIN_POINTS
  createdAt   DateTime    @default(now())

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  goal Goal? @relation(fields: [goalId], references: [id], onDelete: SetNull)

  @@unique([userId, reason, sourceId])  // Idempotency: prevent duplicate awards
  @@index([userId, weekKey])
  @@index([userId, createdAt])
  @@index([goalId, weekKey])
}

// Group Challenge System
// Challenges are competitions where members compete individually, in teams, or as duos
model GroupChallenge {
  id           String          @id @default(cuid())
  groupId      String
  weekKey      String          // The week the challenge runs (e.g., "2026-W04") - for backwards compatibility
  status       ChallengeStatus @default(PENDING)
  threshold    Int             @default(90)   // Required completion percentage (default 90%)
  createdById  String
  createdAt    DateTime        @default(now())

  // Challenge configuration
  mode           ChallengeMode @default(STANDARD)
  durationDays   Int           @default(7)      // Challenge duration in days
  startDate      DateTime                        // When challenge starts
  endDate        DateTime                        // When challenge ends

  // Team/Duo assignments (stored as JSON)
  // For TEAM_VS_TEAM: { "team1": ["userId1", "userId2"], "team2": ["userId3", "userId4"] }
  // For DUO_COMPETITION: [["userId1", "userId2"], ["userId3", "userId4"]]
  teamAssignments Json?
  duoAssignments  Json?

  group     Group               @relation(fields: [groupId], references: [id], onDelete: Cascade)
  approvals ChallengeApproval[]

  @@unique([groupId, weekKey])  // One challenge per group per week
  @@index([groupId, status])
  @@index([groupId, startDate])
}

// Tracks which members have approved/joined a challenge
model ChallengeApproval {
  id          String   @id @default(cuid())
  challengeId String
  userId      String
  approvedAt  DateTime @default(now())

  challenge GroupChallenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@unique([challengeId, userId])  // One approval per user per challenge
}
