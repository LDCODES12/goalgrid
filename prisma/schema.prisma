generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

enum CadenceType {
  DAILY
  WEEKLY
}

model User {
  id           String        @id @default(cuid())
  name         String
  email        String        @unique
  passwordHash String
  timezone     String        @default("America/Chicago")
  reminderTime String        @default("09:00")
  reminderFrequency String   @default("DAILY")
  image        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  members  GroupMember[]
  goals    Goal[]
  checkIns CheckIn[]
  sentReminders     Reminder[] @relation("SentReminders")
  receivedReminders Reminder[] @relation("ReceivedReminders")

  accounts Account[]
  sessions Session[]
}

model Group {
  id         String        @id @default(cuid())
  name       String
  inviteCode String        @unique
  createdAt  DateTime      @default(now())

  members GroupMember[]
  goals   Goal[]
  reminders Reminder[]
}

model GroupMember {
  id       String   @id @default(cuid())
  userId   String
  groupId  String
  role     Role     @default(MEMBER)
  joinedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

model Goal {
  id               String       @id @default(cuid())
  name             String
  notes            String?
  cadenceType      CadenceType
  weeklyTarget     Int?
  pointsPerCheckIn Int          @default(10)
  weeklyTargetBonus Int         @default(20)
  streakBonus      Int          @default(5)
  streakFreezes    Int          @default(1)  // Allowed freeze days per week
  active           Boolean      @default(true)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  ownerId String
  groupId String?

  owner    User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  group    Group?   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  checkIns CheckIn[]

  @@index([groupId])
  @@index([ownerId])
}

model CheckIn {
  id           String   @id @default(cuid())
  goalId       String
  userId       String
  timestamp    DateTime @default(now())
  localDateKey String
  weekKey      String
  isPartial    Boolean  @default(false)  // Partial/mini completion

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([goalId, userId, localDateKey])
  @@index([goalId, userId, weekKey])
  @@index([userId, weekKey])
}

model Reminder {
  id          String   @id @default(cuid())
  groupId     String
  senderId    String
  recipientId String
  message     String
  createdAt   DateTime @default(now())
  readAt      DateTime?

  group     Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  sender    User  @relation("SentReminders", fields: [senderId], references: [id], onDelete: Cascade)
  recipient User  @relation("ReceivedReminders", fields: [recipientId], references: [id], onDelete: Cascade)

  @@index([recipientId, readAt])
  @@index([groupId, createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
